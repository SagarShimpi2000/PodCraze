@model PodCraze.Models.NarratorViewModel
@{
    Layout = null;
    ViewBag.Title = "NarratorsList";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar Example</title>

    <!-- Bootstrap for Table-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
    <!-- css for table-->
    <link rel="stylesheet" href="~/Bootstrap/css/table/table.css">
    <!-- js for table-->
    <script src="~/Bootstrap/js/table/searchInTable.js"></script>

    <!-- css for sign in menu-->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/navbar.css">
    <!-- css for left menu-->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/sidebar.css">
    <!-- js for left menu-->
    <script src="~/Bootstrap/js/sideMenu/sidebar.js"></script>
    <!-- css for footer -->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="assets/css/style.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
</head>

<body>
    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/Home/Index" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/homebtn.png" style="height: 20px;"><strong> Home</strong>
        </a>
        <!--
            
        <a href="#" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/searchbtn.jpg" style="height: 20px;"><strong> Search</strong>
        </a>
        -->
        <hr />
        <a href="/Admin/NarratorsList" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/librarybtn.png" style="height: 20px;"><strong> Narrator List</strong>
        </a>
        <a href="/Admin/ListenersList" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/librarybtn.png" style="height: 20px;"><strong> Listener List</strong>
        </a>
        <hr />
        <a href="/Admin/ListenerRequestList" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/librarybtn.png" style="height: 20px;"><strong> Listener Reqs</strong>
        </a>
        <a href="/Admin/NarratorsRequestList" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/librarybtn.png" style="height: 20px;"><strong> Narrator Reqs</strong>
        </a>
        <a href="#" style="text-decoration: none;"><strong></strong></a>
    </div>

    <div id="main">
        <nav style="display: flex; justify-content: space-between; align-items: center; background-color: #111; padding: 10px; ">
            <!--width: 100%; z-index:10; position: fixed;" id="nav-->
            <div style="display: flex; align-items: center;">
                <button class="openbtn" onclick="openNav()"><span id="menubtn">&#9776;</span> PodCraze</button>

                <!--
                <button style="background-color: #66a3d2; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer; transition: background-color 0.3s;">Home</button>
                <button style="background-color: #66a3d2; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer; transition: background-color 0.3s; margin-left: 10px;">Search</button>
                -->
            </div>
            <div>
                <div class="dropdown">
                    <a href="/Admin/Profile" class="dropbtn" style="text-decoration: none">Goto Profile</a>
                </div>
            </div>
        </nav>
        <br />
        <!--Table start-->

        <h2>Narrators List : </h2>
        <br />

        <center><input type="text" id="searchInput" placeholder="Search in table..."></center>

        <table id="dataTable">
            <tbody>
                <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Gender</th>
                    <th>Action</th>
                </tr>

                </tr>

                @if (Model.NarratorList.Count > 0)
                {
                    foreach (var narrator in Model.NarratorList)
                    {
                        <tr>
                            <td>@narrator.Name</td>
                            <td>@narrator.Username</td>
                            <td>@narrator.Email</td>
                            <td>@narrator.Contact</td>
                            <td>@narrator.Gender</td>
                            <td>
                                <a class="btn btn-danger" href="/Admin/DeleteNarrator?username=@(narrator.Username)" role="button" onclick="Delete()">Delete</a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
        <!--Table end-->
        <!-- Footer-->
        <div class="footer-clean">
            <footer>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-sm-4 col-md-3 item">
                            <h3>About</h3>
                            <ul>
                                <li><a href="#">Company</a></li>
                                <li><a href="#">Team</a></li>
                                <li><a href="#">Legacy</a></li>
                            </ul>
                        </div>
                        <div class="col-sm-4 col-md-3 item">
                            <h3>Privacy</h3>
                            <ul>
                                <li><a href="#">Privacy Policy</a></li>
                                <li><a href="#">Privacy Center</a></li>
                                <li><a href="#">Accessibility</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-3 item social">
                            <a href="#"><i class="icon ion-social-facebook"></i></a><a href="#">
                                <i class="icon ion-social-twitter"></i>
                            </a><a href="#">
                                <i class="icon ion-social-snapchat"></i>
                            </a><a href="#">
                                <i class="icon ion-social-instagram"></i>
                            </a>
                            <p class="copyright">PodCraze © 2023</p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script type="text/javascript">
        function Delete() {
            if (confirm("Are you sure you want to delete Narrator?")) {
                return true;
            } else {
                return false;
            }
        }
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
</body>

</html>