@model PodCraze.Models.PodcastsViewModel
@{
    Layout = null;
    ViewBag.Title = "AddPodcast";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar Example</title>

    <!--Css and bootstrap for form-->
    <link rel="stylesheet" href="~/Bootstrap/css/loginPage/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    <!-- css for sign in menu-->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/navbar.css">
    <!-- css for left menu-->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/sidebar.css">
    <!-- js for left menu-->
    <script src="~/Bootstrap/js/sideMenu/sidebar.js"></script>
    <!-- css for footer -->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="assets/css/style.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
</head>

<body>
    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/Home/Index" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/homebtn.png" style="height: 20px;"><strong> Home</strong>
        </a>
        <!--
        <a href="#" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/searchbtn.jpg" style="height: 20px;"><strong> Search</strong>
        </a>
        <a href="#" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/librarybtn.png" style="height: 20px;"><strong> Your Podcasts</strong>
        </a>
    -->
        <hr />
        <a href="/Narrator/PodRequestList" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/librarybtn.png" style="height: 20px;"><strong> Watch Requests</strong>
        </a>
        <a href="/Narrator/AddPodcast" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/addPodcastbtn.png" style="height: 20px;"><strong> New Podcast</strong>
        </a>
        <a href="#" style="text-decoration: none;"><strong></strong></a>
    </div>

    <div id="main">
        <nav style="display: flex; justify-content: space-between; align-items: center; background-color: #111; padding: 10px; ">
            <!--width: 100%; z-index:10; position: fixed;" id="nav-->
            <div style="display: flex; align-items: center;">
                <button class="openbtn" onclick="openNav()"><span id="menubtn">&#9776;</span> PodCraze</button>

                <!--
                <button style="background-color: #66a3d2; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer; transition: background-color 0.3s;">Home</button>
                <button style="background-color: #66a3d2; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer; transition: background-color 0.3s; margin-left: 10px;">Search</button>
                -->
            </div>
            <div>
                <div class="dropdown">
                    <a href="/Narrator/Profile" class="dropbtn" style="text-decoration: none">Goto Profile</a>
                </div>
            </div>
        </nav>
        <br />

        <!--Form start-->
        <div class="login-reg p-5">
            <div class="row m-0 box-form">
                <div class="col-12 col-md-5 p-0">
                    <div class="row m-0 p-0 h-100 left2">
                        <div class="left2-content">
                            <h1>Hello Creator..</h1>
                            <p>
                                <h4>This is slogan for Creator</h4>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-7 p-0">
                    <div class="row m-0 right">
                        <h2 class="p-0">Sign Up</h2>
                        <br /><br /><br />

                        @using (Html.BeginForm("AddPodcast", "Narrator", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {

                            <div>Book Name: @Html.TextBoxFor(m => m.Name)</div>
                            <br />
                            <div>
                                @Html.Label("ImageFile", "Select Image: ")
                                <input type="file" name="ImageFile" accept=".jpg" />
                            </div>
                            <br />
                            <div>
                                @Html.Label("PdfFile", "Select PDF: ")
                                <input type="file" name="PdfFile" accept=".pdf" />
                            </div>
                            <br />
                            <div>
                                @Html.Label("PdfFile", "Select Audio File: ")
                                <input type="file" name="AudioFile" accept=".mp3" />
                            </div>
                            <br />
                            <div>
                                <table cellpadding="10px">
                                    <tr>
                                        <td>Choose: </td>
                                        <td>Paid @Html.RadioButton("IsPaid", 0, true, new { onchange = "showAmount()" })</td>
                                        <td>Free @Html.RadioButton("IsPaid", 1, false, new { onchange = "hideAmount()" })</td>
                                    </tr>
                                </table>
                            </div>
                            <div id="amountbox">Enter Amount: @Html.TextBoxFor(m => m.Amount)</div>
                            <br />
                            <div>Book Description:</div>
                            <div> @Html.TextAreaFor(m => m.Description, new { rows = 2, cols = 70 })</div>
                            <br />
                            <div class="row m-0 right"><button type="submit">Add Podcast</button></div>
                        }


                        <!--
                        <div class="check-box mt-2 p-0">
                            <label>
                                <input type="checkbox" name="item" checked />
                                <span class="text-checkbox">I agree to <b>Terms of User</b></span>
                            </label>
                        </div>

                            -->

                    </div>
                </div>
            </div>
        </div>
        <!--Form end-->
        <!-- Footer-->
        <div class="footer-clean">
            <footer>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-sm-4 col-md-3 item">
                            <h3>About</h3>
                            <ul>
                                <li><a href="#">Company</a></li>
                                <li><a href="#">Team</a></li>
                                <li><a href="#">Legacy</a></li>
                            </ul>
                        </div>
                        <div class="col-sm-4 col-md-3 item">
                            <h3>Privacy</h3>
                            <ul>
                                <li><a href="#">Privacy Policy</a></li>
                                <li><a href="#">Privacy Center</a></li>
                                <li><a href="#">Accessibility</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-3 item social">
                            <a href="#"><i class="icon ion-social-facebook"></i></a><a href="#">
                                <i class="icon ion-social-twitter"></i>
                            </a><a href="#">
                                <i class="icon ion-social-snapchat"></i>
                            </a><a href="#">
                                <i class="icon ion-social-instagram"></i>
                            </a>
                            <p class="copyright">PodCraze © 2023</p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script>
        function hideAmount() {
            document.getElementById("amountbox").style.display = "none";
        }
        function showAmount() {
            document.getElementById("amountbox").style.display = "block";
        }
    </script>

</body>

</html>