@model PodCraze.Models.LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Narrator Login";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar Example</title>

    <!--Css and bootstrap for form-->
    <link rel="stylesheet" href="~/Bootstrap/css/loginPage/login.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    <!-- css for sign in menu-->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/navbar.css">
    <!-- css for left menu-->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/sidebar.css">
    <!-- js for left menu-->
    <script src="~/Bootstrap/js/sideMenu/sidebar.js"></script>
    <!-- css for footer -->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="assets/css/style.css">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

</head>

<body>
    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/Home/Index" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/homebtn.png"
                 style="height: 20px;"><strong> Home</strong>
        </a>
        <!--
        <a href="#" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/searchbtn.jpg"
                 style="height: 20px;"><strong> Search</strong>
        </a>
        <a href="#" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/librarybtn.png"
                 style="height: 20px;"><strong> Your Library</strong>
        </a>
    -->
        <a href="#" style="text-decoration: none;"><strong></strong></a>
    </div>

    <div id="main">
        <nav style="display: flex; justify-content: space-between; align-items: center; background-color: #111; padding: 10px; ">
            <!--width: 100%; z-index:10; position: fixed;" id="nav-->
            <div style="display: flex; align-items: center;">
                <button class="openbtn" onclick="openNav()"><span id="menubtn">&#9776;</span> PodCraze</button>

                <!--
                <button style="background-color: #66a3d2; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer; transition: background-color 0.3s;">Home</button>
                <button style="background-color: #66a3d2; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer; transition: background-color 0.3s; margin-left: 10px;">Search</button>
                -->
            </div>
            <div>
                <div class="dropdown">
                    <button class="dropbtn">Sign in</button>
                    <div class="dropdown-content">
                        <a href="/Listener/Registration">User</a>
                        <a href="/Narrator/Registration">Creator</a>
                    </div>
                </div>

                <div class="dropdown">
                    <button class="dropbtn">Login</button>
                    <div class="dropdown-content">
                        <a href="/Admin/Login">Admin</a>
                        <a href="/Listener/Login">User</a>
                        <a href="/Narrator/Login">Creator</a>
                    </div>
                </div>
            </div>
        </nav>

        <!--Form Start-->
        <div class="login-reg p-5">
            <div class="row m-0 box-form">
                <div class="col-12 col-md-5 p-0">
                    <div class="row m-0 p-0 h-100 left">
                        <div class="left-content">
                            <h1>Hello Narrator..</h1>
                            <p>
                                <h4>This is slogan for Narrator</h4>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-7 p-0">
                    <div class="row m-0 right">
                        <h2 class="p-0">Sign In</h2>
                        <br /><br /><br />

                        @using (Html.BeginForm("Login", "Narrator", FormMethod.Post))
                        {
                            <div>Username: @Html.TextBoxFor(m => m.Username)</div>
                            <div style="color: red">@Html.ValidationMessageFor(x => x.Username)</div>

                            <br />
                            <div>Password: @Html.PasswordFor(m => m.Password)</div>
                            <div style="color: red">@Html.ValidationMessageFor(x => x.Password)</div>

                            <br />
                            <div class="row m-0 right"><button type="submit">Log in</button></div>
                        }
                        <center><a href="/Narrator/Registration">create account</a></center>
                    </div>
                </div>
            </div>
        </div>

        <!--Form end-->
        <!-- Footer-->
        <div class="footer-clean">
            <footer>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-sm-4 col-md-3 item">
                            <h3>About</h3>
                            <ul>
                                <li><a href="#">Company</a></li>
                                <li><a href="#">Team</a></li>
                                <li><a href="#">Legacy</a></li>
                            </ul>
                        </div>
                        <div class="col-sm-4 col-md-3 item">
                            <h3>Privacy</h3>
                            <ul>
                                <li><a href="#">Privacy Policy</a></li>
                                <li><a href="#">Privacy Center</a></li>
                                <li><a href="#">Accessibility</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-3 item social">
                            <a href="#"><i class="icon ion-social-facebook"></i></a><a href="#">
                                <i class="icon ion-social-twitter"></i>
                            </a><a href="#">
                                <i class="icon ion-social-snapchat"></i>
                            </a><a href="#">
                                <i class="icon ion-social-instagram"></i>
                            </a>
                            <p class="copyright">PodCraze © 2023</p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
</body>

</html>