@{
    Layout = null;
    ViewBag.Title = "Narrator Profile";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar Example</title>

    <!-- Bootstrap CSS for profile-->
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
    <!-- Font Awesome CSS for profile-->
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css'>
    <link rel='stylesheet' href='~/Bootstrap/css/profilePage/profile.css'>

    <!-- css for sign in menu-->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/navbar.css">
    <!-- css for left menu-->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/sidebar.css">
    <!-- js for left menu-->
    <script src="~/Bootstrap/js/sideMenu/sidebar.js"></script>
    <!-- css for footer -->
    <link rel="stylesheet" href="~/Bootstrap/css/homePage/footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="assets/css/style.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
</head>

<body>
    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/Home/Index" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/homebtn.png"
                 style="height: 20px;"><strong> Home</strong>
        </a>
        <!--
        <a href="#" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/librarybtn.png"
                 style="height: 20px;"><strong> Your Podcasts</strong>
        </a>
    -->
        <hr />
        <a href="/Narrator/PodRequestList" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/librarybtn.png"
                 style="height: 20px;"><strong> Watch Requests</strong>
        </a>
        <a href="/Narrator/AddPodcast" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/addPodcastbtn.png"
                 style="height: 20px;"><strong> New Podcast</strong>
        </a>
        <a href="/Narrator/TodoList" style="text-decoration: none;">
            <img src="~/Bootstrap/Images/addPodcastbtn.png"
                 style="height: 20px;"><strong> Pending Work</strong>
        </a>
        <a href="#" style="text-decoration: none;"><strong></strong></a>
    </div>

    <div id="main">
        <nav style="display: flex; justify-content: space-between; align-items: center; background-color: #111; padding: 10px; ">
            <!--width: 100%; z-index:10; position: fixed;" id="nav-->
            <div style="display: flex; align-items: center;">
                <button class="openbtn" onclick="openNav()"><span id="menubtn">&#9776;</span> PodCraze</button>

                <!--
        <button style="background-color: #66a3d2; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer; transition: background-color 0.3s;">Home</button>
        <button style="background-color: #66a3d2; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer; transition: background-color 0.3s; margin-left: 10px;">Search</button>
        -->
            </div>
            <div>
                <div class="dropdown">
                    <a href="/Narrator/Logout" class="dropbtn" style="text-decoration: none">Logout</a>
                </div>
            </div>
        </nav>

        <!--profile start-->
        <div>
            <div class="student-profile py-4">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="card shadow-sm">
                                <div class="card-header bg-transparent text-center">
                                    <img class="profile_img" src="~/Bootstrap/Images/profile.png" alt="User dp">
                                    <h3>@Session["Name"]</h3>
                                </div>
                                <div class="card-body">
                                    <p class="mb-0">Username : <i><b>@Session["Username"]</b></i></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div class="card shadow-sm">
                                <div class="card-header bg-transparent border-0">
                                    <h3 class="mb-0"><i class="far fa-clone pr-1">General Information</i></h3>
                                </div>
                                <div class="card-body pt-0">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th width="30%">Number of podcast</th>
                                            <td width="2%">:</td>
                                            <td>@Session["TotalPod"]</td>
                                        </tr>
                                        <tr>
                                            <th width="30%">Free Podcast </th>
                                            <td width="2%">:</td>
                                            <td>@Session["FreePod"]</td>
                                        </tr>
                                        <tr>
                                            <th width="30%">Paid Podcast</th>
                                            <td width="2%">:</td>
                                            <td>@Session["PaidPod"]</td>
                                        </tr>
                                        <tr>
                                            <th width="30%">Gender</th>
                                            <td width="2%">:</td>
                                            <td>@Session["Gender"]</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div style="height: 26px"></div>
                            <div class="card shadow-sm">
                                <div class="card-header bg-transparent border-0">
                                    <h3 class="mb-0"><i class="far fa-clone pr-1">Description</i></h3>
                                </div>
                                <div class="card-body pt-0">
                                    <p>@Session["Description"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--profile end-->
        <!-- Footer-->
        <div class="footer-clean">
            <footer>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-sm-4 col-md-3 item">
                            <h3>About</h3>
                            <ul>
                                <li><a href="#">Company</a></li>
                                <li><a href="#">Team</a></li>
                                <li><a href="#">Legacy</a></li>
                            </ul>
                        </div>
                        <div class="col-sm-4 col-md-3 item">
                            <h3>Privacy</h3>
                            <ul>
                                <li><a href="#">Privacy Policy</a></li>
                                <li><a href="#">Privacy Center</a></li>
                                <li><a href="#">Accessibility</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-3 item social">
                            <a href="#"><i class="icon ion-social-facebook"></i></a><a href="#">
                                <i class="icon ion-social-twitter"></i>
                            </a><a href="#">
                                <i class="icon ion-social-snapchat"></i>
                            </a><a href="#">
                                <i class="icon ion-social-instagram"></i>
                            </a>
                            <p class="copyright">PodCraze © 2023</p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
</body>

</html>